<Window x:Name="ErrorD" x:Class="SHDTimer.ErrDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHDTimer"
        mc:Ignorable="d"
        Title="There was a problem..." Height="102.967" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" SizeToContent="Height" Icon="Resources/shutdown-icon.ico">
    <StackPanel>
        <TextBlock x:Name="lblText" TextWrapping="WrapWithOverflow" Text="Text" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,5,10"/>
        <Button x:Name="button" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="156" Click="button_Click" Margin="0,0,0,5" Height="30"/>
    </StackPanel>
</Window>
